            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Domains)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InvestCap)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CostumerNumber }) |
            @Html.ActionLink("Details", "Details", new { id=item.CostumerNumber }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CostumerNumber })
        </td>
    </tr>
