@model IEnumerable<CustomerDataBase.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Customer List</h2>

<p>
    @Html.ActionLink("Add Customer", "Create")
</p>
<table class="table">
    <tr>
